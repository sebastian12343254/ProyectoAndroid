<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ListaP" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/backgroundColor</item>

        <!-- Fondo de la app -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <!-- Color principal -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Superficie (cards, sheets, spinners) -->
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>

        <!-- Botón flotante, íconos activos -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Error y advertencia -->
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/white</item>

        <!-- Control States -->
        <item name="android:editTextColor">@color/primaryTextColor</item>
    </style>
</resources>
